{
	"compilerOptions": {
		"incremental": true,
		"target": "ESNext",
		"module": "CommonJS",
		"outDir": "./dist/server",
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": [
		"src/server/**/*"
	]
}
